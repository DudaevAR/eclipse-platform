------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Project Explorer" | get-tree | select "MyProject/File1" | double-click
with [get-editor File1 | get-left-ruler] {
    get-ruler-column AnnotationColumn | click-ruler -line 5 -button Right
    get-menu "Add Task..." | click
}
with [get-window Properties] {
    get-editbox -after [get-label "Description:"] | set-text NewAssociatedTask
    get-button OK | click
}

with [get-view Tasks | get-tree] {
    get-item NewAssociatedTask -column Description | get-property "columns[0]" | equals false | verify-true
    get-item NewAssociatedTask -column Description | get-property "columns[1]" | equals 1 | verify-true
    get-item NewAssociatedTask -column Description | get-property "columns[2]" | equals NewAssociatedTask | verify-true
    get-item NewAssociatedTask -column Description | get-property "columns[3]" | equals File1 | verify-true
    get-item NewAssociatedTask -column Description | get-property "columns[4]" | equals "/MyProject" | verify-true
    get-item NewAssociatedTask -column Description | get-property "columns[5]" | equals "line 5" | verify-true
    get-item NewAssociatedTask -column Description | get-property "columns[6]" | equals Task | verify-true
}
