------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-preferences-menu | click
with [get-window Preferences] {
    get-tree | select "General/Perspectives"
    get-group "Open a new perspective" | get-button "In a new window" | click
    get-button Apply | click
    get-button OK | click
}
get-button "Open Perspective" | click
with [get-window "Open Perspective"] {
    get-table | select "Team Synchronizing"
    get-button OK | click
}
get-eclipse-window -index 1 | get-tab-folder | get-property activePage | equals Synchronize | verify-true
get-tab-folder | get-property activePage | equals "Project Explorer" | verify-true
get-eclipse-window -index 1 | close
get-tab-folder | get-property activePage | equals "Project Explorer" | verify-true
get-menu "Window/Show View/Other..." | click
with [get-window "Show View"] {
    get-editbox | set-text bo
    get-tree | select "General/Bookmarks"
    get-button OK | click
}
get-tab-folder | get-property activePage | equals Bookmarks | verify-true
------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac--
